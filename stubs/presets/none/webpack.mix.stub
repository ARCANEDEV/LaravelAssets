const mix = require('laravel-mix');

/*--------------------------------------------------------------------------
 | Mix Configuration
 |--------------------------------------------------------------------------
 */

mix.setPublicPath('{{public_directory}}');

/*--------------------------------------------------------------------------
 | Mix Asset Management
 |--------------------------------------------------------------------------
 */

mix.js('{{asset_directory}}/js/app.js', 'js/{{name}}.js')
   .sass('{{asset_directory}}/sass/app.scss', 'css/{{name}}.css');
